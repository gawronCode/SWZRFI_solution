@model SWZRFI.DAL.Models.Company;

@{
    ViewBag.Title = "Prezentacja firmy";
    Layout = "_LayoutCorporational";
}

<h1>@ViewData["Title"]</h1>

<div class="container">
    
    <h1 style="margin-top: 30px">@Model.Name</h1>

    <div style="margin-top: 20px" class="row">

        <div class="col-sm">

            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th style="text-align: center" colspan="2" scope="colgroup">
                            <h4>Dane podstawowe</h4>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">Email:</th>
                        <td>@Model.CorporationalEmail</td>
                    </tr>
                    <tr>
                        <th scope="row">Liczba pracowników</th>
                        <td>@Model.UserAccounts.Count()</td>
                    </tr>
                    <tr>
                        <th scope="row">Aktualnie ofert pracy</th>
                        <td>@Model.JobOffers.Count()</td>
                    </tr>
                </tbody>
                <thead class="thead-dark">
                    <tr>
                        <th style="text-align: center" colspan="2" scope="colgroup">
                            <h4>Adres</h4>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">Kraj</th>
                        <td>@Model.Country</td>
                    </tr>
                    <tr>
                        <th scope="row">Miasto</th>
                        <td>@Model.City</td>
                    </tr>
                    <tr>
                        <th scope="row">Ulica</th>
                        <td>@Model.Street</td>
                    </tr>
                    <tr>
                        <th scope="row">Lokal</th>
                        <td>@Model.HouseNumber</td>
                    </tr>
                </tbody>
            </table>

        </div>

        <div class="col-1">

        </div>

        <div class="col-5">

            <h2>Opis działalności</h2>
            <h4>@Model.Description</h4>

        </div>

        </div>
    </div>
<a asp-action="EditCompany" class="btn btn-primary" role="button" style="margin-top: 10px">Edytuj dane</a>
<a asp-action="DeleteCompany" class="btn btn-danger" role="button" style="margin-top: 10px">Usuń firmę</a>