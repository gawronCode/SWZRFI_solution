@model SWZRFI.DAL.Models.JobOfferUserMeeting;

@{
    ViewBag.Title = "Zaproszenie na rozmowę";
    Layout = "_LayoutCorporational";
}

<h1>@ViewData["Title"]</h1>

<div class="container">

    <div class="row">
        <h6>Wybierz datę spotkania z kandydatem @Model.Application.UserAccount.FirstName @Model.Application.UserAccount.LastName</h6>
    </div>

    <form asp-action="SendInvitationForMeeting">
        <div class="row">
            <div style="display:none" class="form-group">
                <input asp-for="UserAccountId" />
            </div>
            <div style="display:none" class="form-group">
                <input asp-for="JobOfferId" />
            </div>
            <div style="display:none" class="form-group">
                <input asp-for="ApplicationId" />
            </div>
            <div class="form-group">
                <label asp-for="MeetingDateTime"></label>
                <input asp-for="MeetingDateTime" class="form-control" />
                <span asp-validation-for="MeetingDateTime" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <a asp-action="Index" value="Anuluj" class="btn btn-secondary">Anuluj</a>
            <input type="submit" value="Wyślij propozycję spotkania" class="btn btn-primary" />
        </div>
    </form>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>