@model SWZRFI.DTO.ConfirmRemoveByName;

@{
    ViewBag.Title = "Potwierdź akcję";
    Layout = "_Layout";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="ConfirmRemove">
    <div style="margin-top: 20px" class="row">
        <div class="col-sm">

            <h4>Uwaga, operacja jest nieodwracalna</h4>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="display: none">
                <input readonly asp-for="ObjectId" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ObjectName"></label>
                <input readonly asp-for="ObjectName" class="form-control" />
                <span asp-validation-for="ObjectName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RepeatedName"></label>
                <input asp-for="RepeatedName" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Potwierdź" class="btn btn-primary" />
                <a asp-action="Index" value="Anuluj" class="btn btn-secondary">Anuluj</a>
            </div>
        </div>
    </div>
</form>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>