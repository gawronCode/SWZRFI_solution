@model SWZRFI.DTO.BindingModels.JobOfferB

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="custom-control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="custom-control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpirationDate" class="custom-control-label"></label>
                <input asp-for="ExpirationDate" class="form-control" />
                <span asp-validation-for="ExpirationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsActive" class="custom-control-label"></label>
                <input asp-for="IsActive" class="form-control" />
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LowerBoundSallary" class="custom-control-label"></label>
                <input asp-for="LowerBoundSallary" class="form-control" />
                <span asp-validation-for="LowerBoundSallary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpperBoundSallary" class="custom-control-label"></label>
                <input asp-for="UpperBoundSallary" class="form-control" />
                <span asp-validation-for="UpperBoundSallary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>