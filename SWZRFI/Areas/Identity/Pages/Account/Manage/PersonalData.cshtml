@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Zarządzanie danymi";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
        <p>
            <strong>Wszelkie dane zgromadzone przez system mogą zostać usunięte. Uwaga - operacja jest nieodwracalna.</strong>
        </p>
        <p>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger">Chcę usunąć konto</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
